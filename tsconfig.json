{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "paths": {
    "*": ["./*"],
    "@/*": ["./*"],
    "@components/*": ["./components/*"],
    "@screens/*": ["./app/screens/*"],
    "@src/*": ["./src/*"],
    "@hooks/*": ["./src/hooks/*"],
    "@contexts/*": ["./src/contexts/*"],
    "@api/*": ["./src/api/*"],
    "@custom-types/*": ["./types/*"]
  }
}
