{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@screens/*": ["./app/screens/*"],
      "@src/*": ["./src/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@api/*": ["./src/api/*"],
      "@types/*": ["./types/*"]
    },
    "esModuleInterop": true,
    "jsx": "react-native"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "paths": {
    "@/*": ["./*"],
    "@components/*": ["app/components/*"],
    "@screens/*": ["app/screens/*"],
    "@src/*": ["src/*"],
    "@hooks/*": ["src/hooks/*"],
    "@contexts/*": ["src/contexts/*"]
  }
}
